<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yucky Politicians | Laws</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/laws.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
    <div id="header-div">
        <h1 id="header-text">Applicable Laws</h1>
        <a href="/"><button id="home-button">Home</button></a>
    </div>

    <div id="congresses-div">
        <h2>Congress Number</h2>
        <button class="congress-link">118th Congress</button>
        <button class="congress-link">117th Congress</button>
        <button class="congress-link">116th Congress</button>
        <button class="congress-link">115th Congress</button>
    </div>

    <div id="law-list-container">
        <% user.laws.forEach(function(result){ %>
            <a
                href="/law/<%= result.requestData.congress %>/<%= result.requestData.billType %>/<%= result.requestData.billNumber %>">
                <div class='law'>
                    <h2>
                        <%= result.lawData.title %>
                    </h2>

                    <h4>Flagged Categories:</h4>
                    <ul>
                        <% result.affectedCategories.forEach(function(category){ %>
                            <li>
                                <%= category.categoryName%>
                            </li>
                            <% }); %>
                    </ul>
                </div>
            </a>
            <% }); %>
    </div>
</body>

</html>