<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yucky Politicians | Profile</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
    <nav class="navbar">
        <h1 class="navbar-header">Welcome, <%= user.username%>!</h1>

        <div class="navbar-content">
            <a class="navbar-link" href="/">Home</a>
            <a class="navbar-link" href="/login">Login</a>
            <a class="navbar-link" href="/register">Register</a>
            <a class="navbar-link" id="current-page" href="/profile">Profile</a>
            <a class="navbar-link" href="/laws">Laws</a>
            <a class="navbar-link" href="/about">About</a>
        </div>
    </nav>

    <%- include('./partials/flash')%>

        <main>
            <div id="settings-navbar">
                <h3>Settings</h3>
                <button data-target="general">General</button>
                <button data-target="contact">Contact</button>
                <button data-target="bio">Bio</button>
                <button data-target="representatives">Representatives</button>
            </div>

            <div id="settings-container">
                <div id="general" class="settings-section">
                    <h2>General Settings</h2>
                    <form action="update-general" method="post">

                        <label for="username" class="required">Username:</label>
                        <input type="text" name="username" required>

                        <label for="password" class="required">Password:</label>
                        <input type="password" name="password" required>
                    </form>
                </div>


                <div id="contact" class="settings-section">
                    <h2>Contact Settings</h2>
                    <form action="update-contact" method="post">

                        <label for="email" class="required">Email:</label>
                        <input type="email" name="email" required>

                        <label for="phone-number" class="required">Phone Number:</label>
                        <input type="number" name="phone-number" required>
                    </form>
                </div>


                <div id="bio" class="settings-section">
                    <h2>Bio Settings</h2>
                    <form action="update-bio" method="post">
                        <h4>Note: Updating your bio will require re-filtering the laws. This might take some time!</h4>
                        <label for="bio" class="required">Bio:</label>
                        <input type="text" name="bio" required>
                    </form>
                </div>


                <div id="representatives" class="settings-section">
                    <h2>Representatives Settings</h2>
                    <form action="update-general" method="post">
                        <h4>Manually input your representatives or input your address to autofill them.</h4>

                        <label for="address">Street Address:</label>
                        <input type="text" name="address">

                        <label for="city">City:</label>
                        <input type="text" name="city">

                        <label for="state">State:</label>
                        <input type="text" name="state">

                        <label for="zip">Zip Code:</label>
                        <input type="number" name="zip">


                        <button type="button" id="autofill-btn">Autofill</button>

                        <label for="houseRep" class="required">House Representative:</label>
                        <input type="text" name="houseRep" required>

                        <label for="senateRep1" class="required">Senate Representative 1:</label>
                        <input type="text" name="senateRep1" required>

                        <label for="senateRep2" class="required">Senate Representative 2:</label>
                        <input type="text" name="senateRep2" required>
                    </form>
                </div>
            </div>
        </main>

        <script>
            $(document).ready(function () {
                $('#settings-navbar button').click(function () {
                    var targetSection = $(this).data('target');
                    $('.settings-section').hide();
                    $('#' + targetSection).show();
                });
            });

            async function fetchRepresentatives(address) {
                try {
                    const response = await fetch("/api/reps", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ address })
                    });

                    if (!response.ok) {
                        throw new Error("Network response was not ok");
                    }

                    const reps = await response.json();
                    return reps;

                    // For example, display them on the page
                } catch (error) {
                    console.error("Error fetching representatives:", error);
                    return null;
                }
            }

            $(document).ready(function () {
                const $addressInput = $('input[name="address"]');
                const $cityInput = $('input[name="city"]');
                const $stateInput = $('input[name="state"]');
                const $zipInput = $('input[name="zip"]');
                const $houseRepInput = $('input[name="houseRep"]');
                const $senateRep1Input = $('input[name="senateRep1"]');
                const $senateRep2Input = $('input[name="senateRep2"]');

                $("#autofill-btn").click(function () {
                    const address = $addressInput.val();
                    const city = $cityInput.val();
                    const state = $stateInput.val();
                    const zip = $zipInput.val();

                    if (address && city && zip && state) {
                        const fullAddress = `${address}, ${city} ${state} ${zip.toString()}`;
                        fetchRepresentatives(fullAddress)
                            .then(function (reps) {
                                // Update the representative fields with the returned values
                                $houseRepInput.val(reps.houseRep || "");
                                $senateRep1Input.val(reps.senateRep1 || "");
                                $senateRep2Input.val(reps.senateRep2 || "");
                            })
                            .catch(function (error) {
                                console.error("Error fetching representatives:", error);
                                // Optionally clear the fields or handle the error appropriately
                                $houseRepInput.val("");
                                $senateRep1Input.val("");
                                $senateRep2Input.val("");
                            });
                    } else {
                        // Optionally, clear the fields if the address is empty
                        $houseRepInput.val("");
                        $senateRep1Input.val("");
                        $senateRep2Input.val("");
                    }
                });
            });
        </script>
</body>

</html>