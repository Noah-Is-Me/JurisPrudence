<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yucky Politicians | Register</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/form.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
    <%- include("partials/flash")%>

        <div id="header-div">
            <h1 id="header-text">Register your Yucky Politicians account!</h1>
            <a href="/"><button id="home-button">Home</button></a>
        </div>

        <div id="sections-div">
            <h2>Sections</h2>
            <a class="navbar-link" href="#basic-information">Basic Information</a>
            <a class="navbar-link" href="#bio">Bio</a>
            <a class="navbar-link" href="#representative-information">Representative Information</a>
        </div>

        <div id="form-div">
            <form id="information-form" action="register" method="post">
                <fieldset id="basic-information">
                    <legend>Basic Information</legend>

                    <label for="username" class="required">Username:</label>
                    <input type="text" name="username" required>

                    <label for="password" class="required">Password:</label>
                    <input type="password" name="password" required>

                </fieldset>

                <fieldset id="bio">
                    <legend>Bio</legend>

                    <label for="bio" class="required">Bio:</label>
                    <input type="text" name="bio" required>
                </fieldset>

                <fieldset id="address">
                    <legend>Address</legend>

                    <label for="address" class="required">Street Address:</label>
                    <input type="text" name="address" required>

                    <label for="city" class="required">City:</label>
                    <input type="text" name="city" required>

                    <label for="state" class="required">State:</label>
                    <input type="text" name="state" required>

                    <label for="zip" class="required">Zip Code:</label>
                    <input type="number" name="zip" required>
                </fieldset>

                <fieldset id="representative-information">
                    <legend>Representative Information</legend>

                    <h4>Click below to autofill your representative information using your address.</h4>
                    <button type="button" id="autofill-btn">Autofill</button>
                    <h4>Please review the information below and correct it if needed.</h4>

                    <label for="houseRep" class="required">House Representative:</label>
                    <input type="text" name="houseRep" required>

                    <label for="senateRep1" class="required">Senate Representative 1:</label>
                    <input type="text" name="senateRep1" required>

                    <label for="senateRep2" class="required">Senate Representative 2:</label>
                    <input type="text" name="senateRep2" required>

                    <!--Ewww yucky html camel case-->

                </fieldset>

                <button id="submit-button" type="submit">Submit</button>
            </form>
        </div>


        <script>
            async function fetchRepresentatives(address) {
                try {
                    const response = await fetch("/api/reps", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ address })
                    });

                    if (!response.ok) {
                        throw new Error("Network response was not ok");
                    }

                    const reps = await response.json();
                    return reps;

                    // For example, display them on the page
                } catch (error) {
                    console.error("Error fetching representatives:", error);
                    return null;
                }
            }

            $(document).ready(function () {
                const $addressInput = $('input[name="address"]');
                const $cityInput = $('input[name="city"]');
                const $stateInput = $('input[name="state"]');
                const $zipInput = $('input[name="zip"]');
                const $houseRepInput = $('input[name="houseRep"]');
                const $senateRep1Input = $('input[name="senateRep1"]');
                const $senateRep2Input = $('input[name="senateRep2"]');

                $("#autofill-btn").click(function () {
                    const address = $addressInput.val();
                    const city = $cityInput.val();
                    const state = $stateInput.val();
                    const zip = $zipInput.val();

                    if (address && city && zip && state) {
                        const fullAddress = `${address}, ${city} ${state} ${zip.toString()}`;
                        fetchRepresentatives(fullAddress)
                            .then(function (reps) {
                                // Update the representative fields with the returned values
                                $houseRepInput.val(reps.houseRep || "");
                                $senateRep1Input.val(reps.senateRep1 || "");
                                $senateRep2Input.val(reps.senateRep2 || "");
                            })
                            .catch(function (error) {
                                console.error("Error fetching representatives:", error);
                                // Optionally clear the fields or handle the error appropriately
                                $houseRepInput.val("");
                                $senateRep1Input.val("");
                                $senateRep2Input.val("");
                            });
                    } else {
                        // Optionally, clear the fields if the address is empty
                        $houseRepInput.val("");
                        $senateRep1Input.val("");
                        $senateRep2Input.val("");
                    }
                });
            });
        </script>
</body>

</html>